---
import SkillTag from './SkillTag.astro';

interface Props {
  name?: string;
  bio?: string;
  image?: string;
  skills?: string[];
}

const {
  name = "hypercoin",
  bio = "Passionate Bitcoin-focused developer.",
  image = "/images/hypercoind_pfp.jpg",
  skills = ["Python", "Go", "C#", "DevOps", "Automation"],
} = Astro.props;

const currentYear = new Date().getFullYear();
---

<footer>
  <div class="container">
    <div class="footer-about">
      <img
        src={image}
        alt={`${name} developer profile`}
        class="avatar-image"
      />
      <p class="footer-bio">{bio}</p>
      <div class="footer-skills">
        {skills.map((skill) => <SkillTag name={skill} />)}
      </div>
    </div>
    <p class="footer-copyright">&copy; {currentYear} hypercoin.dev</p>
  </div>
</footer>
