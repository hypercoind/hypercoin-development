---
import SkillTag from './SkillTag.astro';

interface Props {
  name?: string;
  bio?: string;
  image?: string;
  skills?: string[];
}

const {
  name = "hypercoin",
  bio = "Passionate Bitcoin-focused developer.",
  image = "/images/hypercoind_pfp.jpg",
  skills = ["Python", "Go", "C#", "DevOps", "Automation"],
} = Astro.props;
---

<section id="about" class="about-compact">
  <div class="container">
    <div class="about-row">
      <div class="about-avatar">
        <img
          src={image}
          alt={`${name} developer profile`}
          class="avatar-image"
        />
      </div>
      <div class="about-bio">
        <p>{bio}</p>
      </div>
      <div class="about-skills">
        {skills.map((skill) => <SkillTag name={skill} />)}
      </div>
    </div>
  </div>
</section>
